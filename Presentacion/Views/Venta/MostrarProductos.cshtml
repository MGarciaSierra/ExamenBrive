@model Atributos.Producto
@{
    ViewBag.Title = "MostrarProductos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="../../Scripts/jquery-1.10.2.js" type="text/javascript"></script>
<script src="../../Scripts/jquery-1.10.2.min.js" type="text/javascript"></script>

<div class="container">
    <div class="row">
        <h2>Venta</h2>
    </div>
</div>



<div class="row">
    @if (Model.Productos != null)
    {
        foreach (Atributos.Producto producto in Model.Productos)
        {
    <div class="col-md-4">
        <div class="col-lg-3">
            <div class="card-deck">
                <div class="card" style="width: 25rem; height:30rem; margin-bottom:8rem">
                    <div class="list-group">
                        <div class="text-center">
                            @if (producto.Imagen != null)
                            {
                                <p><img src="data:image/jpeg;base64,@Convert.ToBase64String(producto.Imagen)" style=" height:150px; width: 150px;" alt="Card image cap" /></p>
                            }

                            else
                            {
                                <p><img src="~/Content/Img/sinproducto.png" style=" height:150px; width:150px;" /></p>
                            }

                            <h4 class="card-title">@producto.Nombre</h4>
                            <p class="card-text">$@producto.Precio</p>
                            <p class="card-text">@producto.Descripcion</p>

                            <a href="@Url.Action("Carrito", "Venta", new { IdProducto = producto.IdProducto })" class="btn btn-primary" style=" font-weight:bold;">Agregar al carrito</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
        }
    }
</div>

