@model Atributos.Usuario
@{
    ViewBag.Title = "Formulario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>Usuario</h1>
            <h5>Ingrese los Datos del Usuario para registrar uno nuevo: </h5>
        </div>
    </div>

    @using (Html.BeginForm("Formulario", "Usuario", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="form-group">
            <div class="col-md-3">
                @Html.LabelFor(model => model.IdUsuario, new { @class = "hidden" })
                @Html.TextBoxFor(model => model.IdUsuario, new { @class = "hidden form-control" })
            </div>
        </div>
        <br />

        <div class="form-group">
            <div class="col-md-3">

                @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @autocomplete = "off", @placeholder = "UserName", @onkeypress = "return SoloLetras('event','LblNombreError')" })
                @Html.ValidationMessageFor(model => model.Nombre)
                <label id="LblNombreError"></label>
            </div>
            <div class="form-group">
                <div class="col-md-3">

                    @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", @autocomplete = "off", @placeholder = "Nombre" })
                    @Html.ValidationMessageFor(model => model.Nombre)
                    <label id="LblNombreError"></label>
                </div>



                <div class="col-md-3">

                    @Html.TextBoxFor(model => model.ApellidoPaterno, new { @class = "form-control", @autocomplete = "off", @placeholder = "Apellido Paterno", @onkeypress = "retun SoloLetras(event,'lblApellidoPaternoError')" })
                    <label id="lblApellidoPaternoError"></label>
                </div>



                <div class="col-md-3">

                    @Html.TextBoxFor(model => model.ApellidoMaterno, new { @class = "form-control", @autocomplete = "off", @placeholder = "Apellido Materno", @onkeypress = "return SoloLetras(event,'lblApellidoMaterno')" })
                    <label id="lblApellidoMaternoError"></label>
                </div>
            </div>

            <div class="col-md-3">

                @Html.TextBoxFor(model => model.FechaNacimiento, new { @class = "form-control", @autocomplete = "off", @placeholder = "Fecha de Nacimiento" })
                <label id="lblApellidoMaternoError"></label>
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-3">
                <input type="submit" value="Guardar" class="btn btn-success" />
                @Html.ActionLink("Regresar", "Mostrar", "Usuario", htmlAttributes: new { @class = "btn btn-danger" })
            </div>
        </div>
    }
</div>




